{
	"name": "git-commit-lint-vscode",
	"displayName": "git-commit-lint-vscode",
	"description": "git提交规范",
	"version": "1.6.0",
	"publisher": "UvDream",
	"engines": {
		"vscode": "^1.76.0"
	},
	"categories": [
		"Other"
	],
	"license": "MIT",
	"homepage": "https://github.com/UvDream/git-commit-lint-vscode/blob/master/README.md",
	"bugs": {
		"url": "https://github.com/UvDream/git-commit-lint-vscode/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/UvDream/git-commit-lint-vscode"
	},
	"keywords": [
		"git",
		"emoji",
		"lint"
	],
	"icon": "static/logo.png",
	"activationEvents": [
		"onCommand:extension.gitEmoji",
		"onCommand:extension.switching"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "git-commit-lint-vscode",
			"properties": {
				"gitCommitLintVscode.gitCommitFormat": {
					"type": "string",
					"default": "emoji",
					"description": "git 提交格式，使用 emoji 还是 code",
					"enum": [
						"emoji",
						"code"
					]
				},
				"gitCommitLintVscode.coverInputValue": {
					"type": "boolean",
					"default": true,
					"description": "是否覆盖提交信息"
				}
			}
		},
		"commands": [
			{
				"command": "extension.gitEmoji",
				"title": "git emoji commit message",
				"icon": {
					"dark": "static/icon.svg",
					"light": "static/icon_light.svg"
				}
			},
			{
				"command": "extension.switching",
				"title": "git commit lint switch1"
			}
		],
		"menus": {
			"scm/title": [
				{
					"when": "scmProvider == git",
					"command": "extension.gitEmoji",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"pub": "vsce publish",
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.1",
		"@types/node": "^18.14.6",
		"@types/vscode": "^1.76.0",
		"mocha": "^10.2.0",
		"tslint": "^6.1.3",
		"typescript": "^4.9.5",
		"@vscode/test-electron": "^2.3.0"
	}
}